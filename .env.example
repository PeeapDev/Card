# ===========================================
# Payment System Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_NAME=payment-system
APP_VERSION=1.0.0

# URLs (REQUIRED for Monime payment integration)
APP_URL=https://your-backend-api.com
FRONTEND_URL=https://your-frontend-app.com

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# Service Ports
IDENTITY_SERVICE_PORT=3001
ACCOUNT_SERVICE_PORT=3002
CARD_SERVICE_PORT=3003
TRANSACTION_SERVICE_PORT=3004
MERCHANT_SERVICE_PORT=3005
SETTLEMENT_SERVICE_PORT=3006
FRAUD_SERVICE_PORT=3007
DEVELOPER_SERVICE_PORT=3008
NOTIFICATION_SERVICE_PORT=3009

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=payment_admin
POSTGRES_PASSWORD=payment_secret_password
POSTGRES_DB=payment_system

# Per-service database passwords
IDENTITY_DB_PASSWORD=identity_db_password
ACCOUNT_DB_PASSWORD=account_db_password
CARD_DB_PASSWORD=card_db_password
TRANSACTION_DB_PASSWORD=transaction_db_password
MERCHANT_DB_PASSWORD=merchant_db_password
SETTLEMENT_DB_PASSWORD=settlement_db_password
FRAUD_DB_PASSWORD=fraud_db_password
DEVELOPER_DB_PASSWORD=developer_db_password
NOTIFICATION_DB_PASSWORD=notification_db_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret_password

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=payment_mq
RABBITMQ_PASSWORD=rabbitmq_secret_password
RABBITMQ_VHOST=/

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_PRIVATE_KEY_PATH=/app/keys/private.pem
JWT_PUBLIC_KEY_PATH=/app/keys/public.pem
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Encryption
ENCRYPTION_MASTER_KEY=your-32-byte-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=Payment System <noreply@example.com>

# SMS Provider
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# External Services (optional)
KYC_PROVIDER_API_KEY=
KYC_PROVIDER_URL=

# DeepSeek OCR via Replicate (for KYC document verification)
# Get your API token from https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here

# Monime Payment Gateway (Sierra Leone)
MONIME_API_URL=https://api.monime.io
MONIME_ACCESS_TOKEN=mon_test_your_token_here
MONIME_SPACE_ID=spc-your-space-id
MONIME_WEBHOOK_SECRET=your_webhook_secret
MONIME_SOURCE_ACCOUNT_ID=your_source_financial_account_id
MONIME_PAYOUT_ACCOUNT_ID=your_payout_financial_account_id

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_PHYSICAL_CARDS=true
FEATURE_NFC_PAYMENTS=true
FEATURE_QR_PAYMENTS=true
FEATURE_ML_FRAUD=true

# ===========================================
# cPanel WHM File Upload Configuration
# ===========================================
# FTP credentials for uploading files to cPanel server
CPANEL_FTP_HOST=ftp.yourdomain.com
CPANEL_FTP_USER=your_ftp_username
CPANEL_FTP_PASSWORD=your_ftp_password
CPANEL_FTP_PORT=21
CPANEL_FTP_BASE_PATH=/public_html/uploads

# Public URL where uploaded files are accessible
CDN_BASE_URL=https://assets.yourdomain.com
