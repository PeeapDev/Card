{
  "version": 2,
  "framework": "vite",
  "buildCommand": "cd apps/web && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "apps/web/dist",
  "installCommand": "echo 'skipping root install'",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "crons": [
    {
      "path": "/api/cron/keepalive",
      "schedule": "0 8 * * *"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    { "source": "/api/router/(.*)", "destination": "/api/router" },
    { "source": "/api/(.*)", "destination": "/api/router" },
    { "source": "/(.*)", "destination": "/api/router", "has": [{ "type": "host", "value": "api.peeap.com" }] },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
