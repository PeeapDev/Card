{
  "version": 2,
  "framework": "vite",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet -- .",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --legacy-peer-deps",
  "rewrites": [
    { "source": "/api/school/:path*", "destination": "https://gov.school.edu.sl/api/peeap/:path*" },
    { "source": "/api/(.*)", "destination": "https://peeap-merchant.vercel.app/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
