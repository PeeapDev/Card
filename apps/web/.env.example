# ===========================================
# Environment Variables for PeeAp Web App
# ===========================================
# Copy this file to .env and fill in your values

# App Mode: 'full' | 'merchant' | 'checkout'
VITE_APP_MODE=full

# API Configuration
VITE_API_URL=https://your-api-url.com
VITE_API_BASE_URL=https://your-api-url.com

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Firebase Configuration (for push notifications)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_VAPID_KEY=your-vapid-key

# Monime Payment Gateway
VITE_MONIME_PAYMENT_URL=https://pay.monime.io
VITE_MONIME_API_URL=https://api.monime.io

# Orange Money Configuration
VITE_ORANGE_MONEY_MERCHANT_ID=your-merchant-id
VITE_ORANGE_MONEY_API_KEY=your-api-key

# App URLs
VITE_APP_URL=https://peeap.com
VITE_CHECKOUT_URL=https://checkout.peeap.com
VITE_MERCHANT_URL=https://merchant.peeap.com

# Feature Flags
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_BIOMETRIC_AUTH=true

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Development
VITE_DEV_MODE=false
