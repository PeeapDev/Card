{
  "name": "peeap-nfc-agent",
  "version": "1.0.0",
  "description": "Local NFC Agent for PeeAP POS integration",
  "main": "nfc-agent.js",
  "bin": {
    "peeap-nfc": "./nfc-agent.js"
  },
  "scripts": {
    "start": "node nfc-agent.js",
    "build:exe": "pkg nfc-agent.js --targets node18-macos-x64,node18-win-x64,node18-linux-x64 --output dist/peeap-nfc-agent"
  },
  "dependencies": {
    "nfc-pcsc": "^0.8.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "author": "PeeAP",
  "license": "MIT",
  "pkg": {
    "scripts": "nfc-agent.js",
    "assets": [],
    "targets": [
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  }
}
