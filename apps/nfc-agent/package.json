{
  "name": "peeap-nfc-agent",
  "version": "1.0.0",
  "description": "Local NFC Agent for PeeAP POS integration",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && electron .",
    "build": "tsc",
    "package:win": "electron-builder --win --x64",
    "package:mac": "electron-builder --mac --x64 --arm64",
    "package:linux": "electron-builder --linux --x64"
  },
  "build": {
    "appId": "com.peeap.nfc-agent",
    "productName": "PeeAP NFC Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@anthropic-ai/bedrock-sdk": "^0.10.2",
    "electron-store": "^8.1.0",
    "nfc-pcsc": "^0.8.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.2"
  },
  "author": "PeeAP",
  "license": "MIT"
}
