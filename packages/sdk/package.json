{
  "name": "@softtouch/sdk",
  "version": "1.0.0",
  "description": "Official SDK for SoftTouch Payment Platform - A modern closed-loop payment system",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "payment",
    "sdk",
    "api",
    "wallet",
    "cards",
    "fintech",
    "softtouch",
    "payment-gateway",
    "virtual-cards",
    "qr-payments",
    "nfc"
  ],
  "author": "SoftTouch <developers@softtouch.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/softtouch/sdk-js.git"
  },
  "homepage": "https://docs.softtouch.io/sdk",
  "bugs": {
    "url": "https://github.com/softtouch/sdk-js/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  }
}
